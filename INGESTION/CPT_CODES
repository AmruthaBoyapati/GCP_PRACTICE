from pyspark.sql import SparkSession

spark = SparkSession.builder \
                    .appName("CPT Codes Ingestion") \
                    .getOrCreate() 

BUCKET_NAME = "healthcare_bucket_ammu"
CPT_BUCKET_PATH = f"gs://{BUCKET_NAME}/landing/cptcodes/*.csv"
BQ_TABLE = "clear-basis-469515-u9.bronze_dataset.cpt_codes"
TEMP_GCS_BUCKET = f"{BUCKET_NAME}/temp/"

cptcodes_df = spark.read.csv(CPT_BUCKET_PATH, header=True)

for col in cptcodes_df.columns:
    new_col = col.replace(" ","_").lower()
    cptcodes_df = cptcodes_df.withColumnRenamed(col, new_col)
 
(cptcodes_df.write
            .format("bigquery")
            .option("table", BQ_TABLE)
            .option("temporaryGcsBucket", TEMP_GCS_BUCKET)
            .mode("overwrite")
            .save())
    
   
